# Zathura configuration file
# See man `man zathurarc'
map r reload
map p print
map i recolor
map J zoom out
map K zoom in
map R rotate
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

set font 'monospace 8'

# zathurarc-rasmus
set notification-error-bg       "#4C4C4B" # base01  # seem not work
set notification-error-fg       "#FF968C" # red
set notification-warning-bg     "#4C4C4B" # base01
set notification-warning-fg     "#FF968C" # red
set notification-bg             "#4C4C4B" # base01
set notification-fg             "#FFC591" # yellow

set completion-group-bg         "#002b36" # base03
set completion-group-fg         "#B6B6B5" # base00
set completion-bg               "#1A1A19" # base02
set completion-fg               "#D1D1D1" # base1
set completion-highlight-bg     "#4C4C4B" # base01
set completion-highlight-fg     "#EAEAEA" # base2

# Define the color in index mode
set index-bg                    "#333332" # base02
set index-fg                    "#D1D1D1" # base1
set index-active-bg             "#4C4C4B" # base01
set index-active-fg             "#EAEAEA" # base2

set inputbar-bg                 "#4C4C4B" # base01
set inputbar-fg                 "#EAEAEA" # base2

set statusbar-bg                "#1A1A19" # base02
set statusbar-fg                "#D1D1D1" # base1

set highlight-color             "#B6B6B5" # base00  # hightlight match when search keyword(vim's /)
set highlight-active-color      "#8DB4D4" # blue

set default-bg                  "#1A1A19" # base02
set default-fg                  "#D1D1D1" # base1
set render-loading              true
set render-loading-fg           "#1A1A19" # base02
set render-loading-bg           "#1A1A19" # base02

# Recolor book content's color
set recolor                     true
set recolor-lightcolor          "#1A1A19" # base02
set recolor-darkcolor           "#D1D1D1" # base1
set recolor-keephue             true      # keep original color
